        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#onBack" text="Back"/>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem mnemonicParsing="false" onAction="#onClose" text="Exit"/>
        </Menu>
    </MenuBar>
    <ScrollPane prefHeight="368.0" prefWidth="600.0">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="368.0" prefWidth="600.0">
            <TextField fx:id="empIDText" layoutX="214.0" layoutY="64.0" promptText="Employee ID"/>
