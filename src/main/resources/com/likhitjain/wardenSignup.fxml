                    onAction="#onRegisterButtonClick" text="Register" style="-fx-background-color: #42a45a"/>
            <Text fill="#f80606" layoutX="214.0" layoutY="61.0" strokeType="OUTSIDE" strokeWidth="0.0"
                  text="Note: All fields are mandatory">
                <font>
                    <Font size="10.0"/>
                </font>
            </Text>
        </AnchorPane>
    </ScrollPane>
