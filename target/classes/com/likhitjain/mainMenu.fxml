<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_CENTER" maxHeight="400.0" maxWidth="600.0" minHeight="400.0"
      minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8"
      fx:controller="com.likhitjain.MainMenu">
    <MenuBar>
        <Menu mnemonicParsing="false" text="File">
            <MenuItem disable="true" mnemonicParsing="false" text="Back"/>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem mnemonicParsing="false" text="Close" onAction="#onClose"/>
        </Menu>
    </MenuBar>
    <Text fontSmoothingType="LCD" smooth="false" strokeType="OUTSIDE" strokeWidth="0.0"
          text="Welcome to BMSCE Hostel Room Allotment Portal" textAlignment="CENTER" underline="true">
        <font>
            <Font size="24.0"/>
        </font>
    </Text>
    <ImageView fitHeight="91.0" fitWidth="109.0" pickOnBounds="true" preserveRatio="true">
        <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </VBox.margin>
        <Image url="@../../images/bmsce-logo.png"/>
    </ImageView>
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Continue as...">
        <font>
            <Font size="12.0"/>
        </font>
        <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </VBox.margin>
    </Text>
    <HBox alignment="CENTER">
        <Button id="studentButton" mnemonicParsing="false" onAction="#onStudentButtonClick" text="Student">
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../images/student-icon.png"/>
                </ImageView>
            </graphic>
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
        </Button>
        <Button id="wardenButton" mnemonicParsing="false" text="Warden" onAction="#onWardenButtonClick">
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../images/warden-icon.png"/>
                </ImageView>
            </graphic>
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
        </Button>
        <Button id="adminButton" mnemonicParsing="false" text="Admin" onAction="#onAdminButtonClick">
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../../images/admin-icon.png"/>
                </ImageView>
            </graphic>
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
